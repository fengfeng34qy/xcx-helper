.flex {
  display: flex;
  width: 100%;
  align-items: center;
}
view.flex-start {
  align-items: flex-start;
}
view.flex-end {
  align-items: flex-end;
  background: #fff;
}
page image {
  margin: 0;
  width: 100%;
  height: 100%;
}
.maxWidth {
  width: 100%;
}

/* 以下为弹性布局 */
view[data-justify-content=center] {
  justify-content: center;
}
view[data-justify-content=flex-start] {
  justify-content: flex-start;
}
view[data-justify-content=space-between] {
  justify-content: space-between;
}
view[data-justify-content=space-around] {
  justify-content: space-around;
}
view[data-direction=column] {
  flex-direction: column;
}
/*  */
view.flex[data-align-items=baseline] {
  align-items: baseline;
}
view.flex[data-align-items=center] {
  align-items: center;
}
view.flex[data-align-items=flex-end] {
  align-items: flex-end;
}
view.flex[data-align-items=flex-start] {
  align-items: flex-start;
}
view.flex[data-align-items=stretch] {
  align-items: stretch;
}
view.flex[data-align-items=initial] {
  align-items: initial;
}
view.flex[data-align-items=inherit] {
  align-items: inherit;
}
view.flex[data-align-items=unset] {
  align-items: unset;
}
