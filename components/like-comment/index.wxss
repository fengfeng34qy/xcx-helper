@import "/res/iconfont.wxss";

.like-comment {
  background-color: #f8f8f8;
  border-radius: 0.5em;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
}

.like-row, .comment-row {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  padding: 10px;
}

.like-row {
  border-bottom: 1px solid #f1f1f1;
}

like-list, comment-list {
  margin-left: 10px;
  flex-grow: 1;
  overflow: hidden;
}

.bar {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
  min-width: 50px;
  max-width: 50px;
  height: 2.5em;
}

.bar-like, .bar-unlike, .bar-comment {
  font-size: x-large;
  text-align: center;
  flex-grow: 1;
  transition: color 0.5s;
}

.bar-like {
  color: #ea6853;
}

.bar-unlike {
  color: #aaa;
}

.bar-comment {
  color: #1aad19;
}

.bar-text {
  color: #aaa;
  font-size: xx-small;
  text-align: center;
}

@media (min-width: 768px) {
  .bar {
    min-width: 70px;
    max-width: 70px;
  }

  .bar-like, .bar-unlike, .bar-comment {
    font-size: xx-large;
  }

  .bar-text {
    font-size: x-small;
  }
}
