.input-box {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: center;
  padding: 4px 5%;
  background-color: #f8f8f8;
  z-index: 1;
}

.input-box-textarea {
  flex-grow: 1;
  font-size: medium;
  padding: 4px;
  line-height: 1.3em;
  border-bottom: 1rpx solid #1aad19;
  margin-right: 0.3em;
}

.input-box-button {
  font-size: medium;
  white-space: nowrap;
  width: 5em;
}

@media (min-width: 768px) {
  .input-box-textarea, .input-box-button {
    font-size: large;
  }
}
